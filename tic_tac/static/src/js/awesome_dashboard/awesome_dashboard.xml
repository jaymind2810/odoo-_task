<?xml version="1.0" encoding="utf-8"?>
<template id="template" xml:space="preserve">

    <t t-name="tic_tac.myOwlSalesDashboard">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h2 class="text-primary fw-bold"> Custom Sales Dashboard</h2>
                                    <div>
                                        <select class="form-select" t-model="state.period" t-on-change="onChangePeriod">
                                            <option value="0">Select Period</option>
                                            <option value="7">last 7 Days</option>
                                            <option value="30">last 30 Days</option>
                                            <option value="90">last 90 Days</option>
                                            <option value="365">last 365 Days</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <KpiCard name="'Quotations'" value="state.quotations.value" percentage="state.quotations.percentage"/>
                        <KpiCard name="'Orders'" value="'20'" percentage="'20'" />
                        <KpiCard name="'Revenues'" value="'30.50k'" percentage="'-3'" />
                        <KpiCard name="'Average Order'" value="'2.5k'" percentage="'-10'" />
                    </div>
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h2 class="text-primary fw-bold">Top Products</h2>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'doughnut'" title="'Top Product Report'"/>
                            </div>
                        </div>
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h2 class="text-primary fw-bold">Top Sales People</h2>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'pie'" title="'Top Sales People'"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h2 class="text-primary fw-bold"> Monthly Sales</h2>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'bar'" title="'Monthly Sales Report'"/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h2 class="text-primary fw-bold">Partner Orders</h2>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'line'" title="'Partner Orders Report'"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>